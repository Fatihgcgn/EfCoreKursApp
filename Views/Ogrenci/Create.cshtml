@model Ogrenci
<h2>Öğrenci Ekle</h2>
<hr>
<form asp-controller="Ogrenci" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciAd" class="form-label">Ögrenci Ad</label>
        <input asp-for="OgrenciAd" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="OgrenciSoyAd" class="form-label">Ögrenci Soyad</label>
        <input asp-for="OgrenciSoyAd" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Ögrenci Eposta</label>
        <input asp-for="Eposta" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Ögrenci Telefon</label>
        <input asp-for="Telefon" class="form-control">
    </div>

    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>